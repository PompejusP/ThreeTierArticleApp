@model IEnumerable<Web_FIA44_ThreeTierArticleApp.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Artikel Liste</h1>

<p>
    <a class="btn btn-outline-secondary" asp-action="Create">Neuer Artikel</a>
</p>
<table class="table table-striped table-secondary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @(item.Price.ToString("c"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                    @(item.IsAvailable ? "✅" : "❌")
            </td>
            <td>
                    <a class="link-underline-opacity-0" href="/home/Details?AId=@item.AId">🔎</a>
                    <a class="link-underline-opacity-0" href="/home/Delete?AId=@item.AId" onclick="return confirm('Warnung\n @item.Name wirklich löschen?')">🗑️</a>
                    <a class="link-underline-opacity-0" href="/home/Update?AId=@item.AId">🔧</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="pagination">
    <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)" asp-route-pageSize="@ViewBag.PageSize" class="btn btn-primary @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">Zurück</a>
    <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)" asp-route-pageSize="@ViewBag.PageSize" class="btn btn-primary">Next</a>
</div>
